{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "Iran Open Data reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/smallmedia/iod-ckan",
  "dataset_fields": [
    {
      "field_name": "title_en",
      "label": {
        "en": "Title of Dataset for English in English",
        "fa_IR": "Title of Dataset for English in Farsi"
      },
      "preset": "title_en",
      "form_placeholder": {
        "en": "Dataset placeholder for English in English",
        "fa_IR": "Dataset placeholder for English in Farsi"
      },
      "required": true
    },
    {
      "field_name": "title_fa",
      "label": {
        "en": "Title of Dataset for Farsi in English",
        "fa_IR": "Title of Dataset for Farsi in Farsi"
      },
      "preset": "title_fa",
      "form_placeholder": {
        "en": "Dataset placeholder for Farsi in English",
        "fa_IR": "Dataset placeholder for Farsi in Farsi"
      },
      "required": true
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset",
      "required": true
    },
    {
      "field_name": "notes_en",
      "label": {
        "en": "Description for English in English",
        "fa_IR": "Description for English in Farsi"
      },
      "form_snippet": "markdown.html",
      "form_placeholder": {
        "en": "Description placeholder for English in English",
        "fa_IR": "Description placeholder for English in Farsi"
      },
      "required": true
    },
    {
      "field_name": "notes_fa",
      "label": {
        "en": "Description for Farsi in English",
        "fa_IR": "Description for Farsi in Farsi"
      },
      "form_snippet": "markdown.html",
      "form_placeholder": {
        "en": "Description placeholder for Farsi in English",
        "fa_IR": "Description placeholder for Farsi in Farsi"
      },
      "required": true
    },
    {
      "field_name": "theme_string",
      "label": {
        "en": "Themes in English",
        "fa_IR": "Themes in Farsi"
      },
      "preset": "tag_required_autocomplete",
      "validators": "not_empty",
      "required": true,
      "form_placeholder": {
        "en": "eg. Themes placeholder in English",
        "fa_IR": "eg. Themes placeholder in Farsi"
      }
    },
    {
      "field_name": "tag_string",
      "label": {
        "en": "Tags in English",
        "fa_IR": "Tags in Farsi"
      },
      "preset": "tag_required_autocomplete",
      "required": true,
      "form_placeholder": {
        "en": "eg. Tags placeholder in English",
        "fa_IR": "eg. Tags placeholder in Farsi"
      }
    },
    {
      "field_name": "owner_org",
      "label": {
        "en": "Organization in English",
        "fa_IR": "Organization in Farsi"
      },
      "preset": "dataset_organization"
    },
    {
      "field_name": "date_start_gregorian",
      "label": {
        "en": "Start Date (Gregorian) in English",
        "fa_IR": "Start Date (Gregorian) in Farsi"
      },
      "form_placeholder": "2017-01-20",
      "preset": "date"
    },
    {
      "field_name": "date_end_gregorian",
      "label": {
        "en": "End Date (Gregorian) in English",
        "fa_IR": "End Date (Gregorian) in Farsi"
      },
      "form_placeholder": "2017-01-20",
      "preset": "date"
    },
    {
      "field_name": "date_start_iranian",
      "label": {
        "en": "Start Date (Iranian) in English",
        "fa_IR": "Start Date (Iranian) in Farsi"
      },
      "form_placeholder": "1395-11-01",
      "preset": "date"
    },
    {
      "field_name": "date_end_iranian",
      "label": {
        "en": "End Date (Iranian) in English",
        "fa_IR": "End Date (Iranian) in Farsi"
      },
      "form_placeholder": "1395-11-01",
      "preset": "date"
    },
    {
      "field_name": "publisher",
      "label": {
        "en": "Publisher in English",
        "fa_IR": "Publisher in Farsi"
      },
      "form_placeholder": {
        "en": "Publisher placeholder in English",
        "fa_IR": "Publisher placeholder in Farsi"
      }
    },
    {
      "field_name": "publisher_url",
      "label": {
        "en": "Publisher URL in English",
        "fa_IR": "Publisher URL in Farsi"
      },
      "validators": "url_validator",
      "form_placeholder": {
        "en": "Publisher URL placeholder in English",
        "fa_IR": "Publisher URL placeholder in Farsi"
      },
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "geographic_string",
      "label": "Geographic Scope",
      "label": {
        "en": "Geographic Scope in English",
        "fa_IR": "Geographic Scope in Farsi"
      },
      "preset": "tag_autocomplete",
      "form_placeholder": {
        "en": "Geographic Scope placeholder in English",
        "fa_IR": "Geographic Scope placeholder in Farsi"
      }
    },
    {
      "field_name": "methodology",
      "label": {
        "en": "Methodology in English",
        "fa_IR": "Methodology in Farsi"
      }
    },
    {
      "field_name": "license_id",
      "label": {
        "en": "License in English",
        "fa_IR": "License in Farsi"
      },
      "form_snippet": "license.html",
      "help_text": {
        "en": "License definitions and additional information can be found at http://opendefinition.org/ in English",
        "fa_IR": "License definitions and additional information can be found at http://opendefinition.org/ in Farsi"
      },
      "required": true
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
